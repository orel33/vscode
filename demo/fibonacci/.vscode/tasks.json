{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "run fib.py",
            "type": "shell",
            "command": "python3",
            "args": [
                "fib.py",
                "20"
            ]
        },
        {
            "label": "build fib.c",
            "type": "shell",
            "command": "gcc -Wall -std=c99 -g fib.c -o fib",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "run fib.c",
            "type": "shell",
            "command": "./fib",
            "dependsOn": [
                "build fib.c"
            ],
            "problemMatcher": []
        }
    ]
}