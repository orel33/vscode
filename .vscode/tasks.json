// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "run hello.js",
            "type": "shell",
            "command": "node",
            "args": [
                "hello.js",
                "2"
            ],
            "options": {
                "cwd": "${workspaceRoot}/demo/js/"
            },
            "problemMatcher": [
                "$eslint-compact"
            ]
        },
        {
            "label": "run hello.c",
            "type": "shell",
            "command": "${workspaceRoot}/demo/c/hello",
            "dependsOn": [
                "build hello.c"
            ]
        },
        {
            "label": "build hello.c",
            "type": "shell",
            "command": "make",
            "options": {
                "cwd": "${workspaceRoot}/demo/c/"
            },
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "run hello.py",
            "type": "shell",
            "command": "python3",
            "args": [
                "hello.py"
            ],
            "options": {
                "cwd": "${workspaceRoot}/demo/python/"
            }
        }

    ]
}