{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug hello.py", /* Python: Terminal (integrated) */
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/demo/python/hello.py", /* "${file}", */
            "console": "integratedTerminal"
        },
        {
            "name": "Debug hello.c",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/demo/c/hello",
            "args": [],
            "stopAtEntry": true,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "Debug hello.js",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/demo/js/hello.js",
            "args": [ "5" ]
        }
    ]
}